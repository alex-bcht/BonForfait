<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment"
    android:orientation="vertical"
    android:id="@+id/linearLayout_frag_main">

    <TextView
        android:id="@+id/resume_app_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="normal" />

    <Button
        android:id="@+id/button_mainToforfait"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:background="#4F46E5"
        android:padding="15dp"
        android:layout_gravity="center"
        android:text="Trouver mon Forfait"
        android:textColor="#FFFFFF" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_main_0"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/img_main_1"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/img_main_2"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground" />

        <ImageView
            android:id="@+id/img_main_3"
            android:layout_width="0dp"
            android:layout_weight="25"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_launcher_foreground" />

    </LinearLayout>

</LinearLayout>